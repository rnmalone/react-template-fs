{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "umd",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "./server/**/*",
    "./lib/**/*",
    "config/**/*"
  ],
  "exclude": [
    "./client/**/*",
    "./node_modules/@types/react",
    "./app.js"
  ]
}
